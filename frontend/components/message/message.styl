#msg
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  background-color: rgba(255,255,255,0.15)
  z-index: 9999


  .win-wrap
    min-height: 100px
    min-width: 240px
    max-width: 480px
    background-color: #fff
    border: 1px solid #808080
    border-radius: 6px
    margin: 10vh auto 0
    position: relative
    overflow: hidden
    overflow-y: auto
    box-shadow: 0 0 10px -1px rgba(0,0,0,0.5)

    .line-top
      position: absolute
      width: 100%
      height: 10%
      top: 0
      left: 0
      background-color: #333

      &.message
        background-color: #36be2c
      &.warning
        background-color: #ffd518
      &.error
        background-color: #ff0000

    .msg-wrap
      box-sizing: border-box

      h4
        color: #222
        width: 100%
        padding: 10px
        text-align: center
        margin: 20px 0 0 0
        text-transform: uppercase

      p
        color: #333333
        padding: 10px
        margin: 0
        width: 100%
        box-sizing: border-box

    .btn-wrap
      margin: 5px 0px
      height: 30px
      padding: 0px 10px

      button.msg-btn
        float: right
        display: block
        width: auto
        height: auto
        padding: 5px 15px
        text-align: center
        min-width: 80px
        background-color: #eee
        border-radius: 4px
        border: 1px solid #808080
        outline: none
        cursor: pointer
        margin-left: 15px

        &:hover
          background-color: #d0d0d0

