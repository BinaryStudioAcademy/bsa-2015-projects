.row
	.col-md-6.col-md-offset-3
		.page-header
			h1 Binary studio projects
			a(ui-sref="create-project") Create new
		.project-container(ng-repeat="project in vm.projects track by $index")
			a.project-name(ui-sref="project-view({ id: project._id })") {{ project.name }}
			p.project-date Begin: {{project.begin | date:'shortDate'}}
				span  EndDate: {{project.end | date: 'shortDate'}}
				strong#in-progres(ng-hide="project.stage == 'done'" )  {{project.stage}}

			.description-container
				p.description {{project.description | cut:true:450}}
			.button-wrap
				button.more(class='btn pull-right' ng-click="vm.goToDetail(project._id)") Show more
			.tech Technologies:
				p(ng-repeat='tech in project.technologies')  {{tech}}

