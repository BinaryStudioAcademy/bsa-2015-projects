.project-container
  border 1px solid #ebebeb
  width 100%
  height auto
  background-color #fff
  border-radius 6px
  padding 10px
  margin-bottom 5px
  box-shadow: 0 3px 4px rgba(0, 0, 0, .2);

span.project-name
  color orange
  margin 20px
  font-size 26px
p.project-date
  margin-left 20px
  font-size 14px
  color #747474

#in-progres
  color rgba(28, 160, 21, 0.86)

button.pull-right
  background-color orange

.description-container
  height 100px
  overflow hidden

.tech
  margin-top 45px

.tech p
  display inline-block
  margin-right 2px
  margin-left 2px


