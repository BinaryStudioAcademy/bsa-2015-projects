.row
	.col-md-6.col-md-offset-3
		.page-header
			h1 New Project
		form(ng-submit="vm.createProject()", name="new-project", method="post", role="form")
			.form-group
				label(for="name") Name
				input.form-control(type="text", name="name", ng-model="vm.name" required)
			.form-group
				label(for="description") Description
				textarea.form-control(type="text", name="description", ng-model="vm.description" required)
			.form-group
				label(for="begin") Begin
				input.form-control(type="date", name="begin" placeholder="month/day/year" ng-model="vm.begin" required)
			.form-group
				label(for="end") End
				input.form-control(type="date", name="end" placeholder="month/day/year" ng-model="vm.end" required)
			.form-group
				label(for="tags") Tags
				input.form-control(type="text", name="tags" placeholder="tag1, tag2, tag3" ng-model="vm.tags" required)
			button.create(type="submit") Create