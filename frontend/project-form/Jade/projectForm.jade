		script(src="../JS/controllers.js")
		script(src="../JS/directives.js")
		script(src="../JS/console-sham.js")

	body(ng-controller="AppController" nv-file-drop="" uploader="uploader")
		div.container
			form
				div.row
					div.col-lg-6.col-md-6.col-sm-6
							h1 New project
							div.row
								div.col-lg-12.col-md-12.col-md-12.col-xs-12
									input#projectName.form-control(type="text" placeholder="Project name...")
									textarea#description.form-control(type="text" placeholder="Description...")
					div.col-lg-6.col-md-6.col-sm-6.col-xs-12(ng-controller="DemoCtrl")
						ui-select#techName( multiple ng-model="multipleDemo.technologies" theme="select2" ng-disabled="disabled")
							ui-select-match(placeholder="Select technologies...") {{$item}}
							ui-select-choices(repeat="technology in availableTechnology | filter:$select.search") {{technology}}
						ui-select#userName( multiple ng-model="multipleDemo.users" theme="select2" ng-disabled="disabled")
							ui-select-match(placeholder="Select users...") {{$item}}
							ui-select-choices(repeat="user in availableUsers | filter:$select.search") {{user}}
				div.row
					div.col-lg-6.col-md-12.col-sm-12
							h2 Add picture
							input#uploadFile(type="file" value="Load picture" nv-file-select="" uploader="uploader" style="margin-top:45px")
							p(style="margin:-21px 0px 0px 0px") Total: {{ uploader.queue.length }}
							table.table
								tbody
									tr(ng-repeat="item in uploader.queue")
										td
											strong {{ item.file.name }}
											<!-- Image preview -->
											<!--auto height-->
											<!--<div ng-thumb="{ file: item.file, width: 100 }"></div>-->
											<!--auto width-->
											div(ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 100 }")
											<!--fixed width and height -->
											<!--<div ng-thumb="{ file: item.file, width: 100, height: 100 }"></div>-->
										td(ng-show="uploader.isHTML5" nowrap) {{item.file.size/1024/1024|number:2}}MB
										
										td(nowrap)
											button.btn.btn-info.btn-xs(type="button" ng-click="item.upload()" ng-disabled="item.isReady || item.isUploading || item.isSuccess") Upload
												span.glyphicon.glyphicon-upload 
											button.btn.btn-danger.btn-xs(type="button" ng-click="item.remove()") Remove
												span.glyphicon.glyphicon-trash
							div
								div.progress(style="")
									div.progress-bar(role="progressbar" ng-style="{ 'width': uploader.progress + '%' }")
								button.btn.btn-info.btn-s( type="button" ng-click="uploader.uploadAll()" ng-disabled="!uploader.getNotUploadedItems().length" style="margin-top:34px") Upload all
									span.glyphicon.glyphicon-upload(style="margin-left:5px")
								button.btn.btn-danger.btn-s(type="button" ng-click="uploader.clearQueue()" ng-disabled="!uploader.queue.length" style="margin-top:34px") Remove all
									span.glyphicon.glyphicon-trash(style="margin-left:5px")

